# Proof-of-Life Backend Environment Variables

# PostgreSQL connection string (Railway provides this automatically)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/proof_of_life

# JWT Secret (CHANGE IN PRODUCTION)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRY_MINUTES=5

# Challenge configuration
CHALLENGE_EXPIRY_SECONDS=120

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000

# CV Pipeline tuning
FRAME_WIDTH=320
EAR_THRESHOLD=0.21
MAR_THRESHOLD=0.55
HEAD_TURN_THRESHOLD=0.035
MIN_CONSECUTIVE_FRAMES=2
